{% block titre %}
	Gestion des utilisateurs
{% endblock %}
{% block boutons %}
	<a href="" class="btn btn-outline-primary float-right ml-2">Ajouter</a>
	<a href="" class="btn btn-outline-warning float-right">Importer</a>
{% endblock %}
{% block body %}
	<div class="card">
		<div class="card-hearder"><br>
		</div>
		<div class="card-body">
			<div class="content">
				<table class="table-bordered" style="width:100%">
					<thead>
						<tr>
							<th>Nom Prenom</th>
							<th>Email</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						{% for user in users %}
							<tr>
								<th>{{user.nomPrenom}}</th>
								<th>{{user.email}}</th>
								<th>
									<a href="{{ path("admin_utilisateur_detail", {id: user.id}) }}" class="btn btn-outline-primary">Detail</a>
								</th>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
