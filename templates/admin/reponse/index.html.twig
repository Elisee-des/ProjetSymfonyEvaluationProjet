{% endblock %}

{% block body %}
	<h3>Liste des reponses</h3>
	<div class="card">
		<div class="card-hearder"><br>
		</div>
		<div class="card-body">
			<div class="content">
				<table class="table-bordered" style="width:100%">
					<thead>
						<tr>
							<th>Nom</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						{% for reponse in reponses %}
							<tr>
								<th>{{reponse.titre}}</th>
								<th>
									<a href="{{ path("admin_reponse_detail", {id: reponse.id}) }}" class="btn btn-outline-primary">Detail</a>
								</th>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>

	<br><br>

{% endblock %}
