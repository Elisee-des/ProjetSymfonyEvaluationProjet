{% extends "base.admin.html.twig" %}
{% block title %}Gestion des projets
{% endblock %}
{% block stylesheets %}{% endblock %}

{% block titre %}
	Gestion des projets
{% endblock %}

{% block boutons %}
	<a href="{{ path("admin_projet_creation") }}" class="btn btn-outline-primary float-right ml-2">Parametr√© un projet</a>
{% endblock %}

{% block body %}
	<h3>Liste des Projets</h3>
	<div class="card">
		<div class="card-hearder"><br>
		</div>
		<div class="card-body">
			<div class="content">
				<table class="table-bordered" style="width:100%">
					<thead>
						<tr>
							<th>Nom</th>
							<th>Date de creation</th>
							<th>Etat</th>
							<th>Action</th>
						</tr>
					</thead>
					<tbody>
						{% for projet in projets %}
							<tr>
								<th>{{projet.nom}}</th>
								<th>{{projet.dateCreation|date("m/d/Y")}}</th>
								<th>
									<a href="{{ path("admin_utilisateur_detail", {id: projet.id}) }}" class="btn btn-outline-primary">Envoyez</a>
									<a href="{{ path("admin_projet_finalisation", {id: projet.id}) }}" class="btn btn-outline-secondary">Finaliser le parametrage</a>
								</th>
								<th>
									<a href="{{ path("admin_projet_detail", {id: projet.id}) }}" class="btn btn-outline-warning">Detail</a>
									<a href="{{ path("admin_projet_detail", {id: projet.id}) }}" class="btn btn-outline-success">Reponse</a>
								</th>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>

	<br><br>

{% endblock %}
